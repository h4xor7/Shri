<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.DetailFragment">

    <HorizontalScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/janChip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="JAN"
                android:textColor="@color/chip_text_color_state"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                app:chipCornerRadius="6dp"
                app:chipMinTouchTargetSize="@dimen/_18sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/febChip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="FEB"
                android:textColor="@color/chip_text_color_state"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                app:chipCornerRadius="6dp"
                app:chipMinTouchTargetSize="@dimen/_18sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/marChip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="MAR"
                android:textColor="@color/chip_text_color_state"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                app:chipCornerRadius="6dp"
                app:chipMinTouchTargetSize="@dimen/_18sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/aprChip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="APR"
                android:textColor="@color/chip_text_color_state"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                app:chipCornerRadius="6dp"
                app:chipMinTouchTargetSize="@dimen/_18sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/mayChip"
