                app:chipMinTouchTargetSize="@dimen/_18sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/novChip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
