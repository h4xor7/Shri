<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shri" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_blue</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <item name="android:colorBackground">@color/app_background</item>
        <item name="rippleColor">@color/secondary_light_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="materialTimePickerTheme">@style/AppTheme.MaterialTimePickerTheme</item>


    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/shri_diplay_text_color</item>
    </style>

    <style name="Widget.App.TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/app_background</item>
        <item name="clockHandColor">@color/secondary_blue</item>
        <item name="clockNumberTextColor">@color/secondary_dark_blue</item>
    </style>


    <style name="AppTheme.MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:colorAccent">@color/secondary_dark_blue</item>
        <item name="android:colorPrimary">@color/primary_blue</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/secondary_blue</item>

    </style>
</resources>